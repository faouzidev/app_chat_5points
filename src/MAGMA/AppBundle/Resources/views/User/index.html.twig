{% extends "::base.html.twig" %}
{% block title %}{{data.title1}}{% endblock %} 
{% block body %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>{{data.title3}} <small>Liste de utilisateurs </small></h3>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        {% include "::msg.html.twig" %}
                        <div class="x_content">

                            <div class="nav navbar-right">
                                <a class="btn btn-app" href="{{path("home")}}user/0" >
                                    <i class="fa fa-save"></i> Nouveau
                                </a>
                            </div>

                            <!-- start project list -->
                            <table class="table table-striped projects">
                                <thead>
                                    <tr>
                                        <th >Nom</th>
                                        <th >Prenom</th>
                                        <th>Mail</th>
                                        <th>Profil</th>
                                        <th style="width: 20%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in itemsData %}
                                        <tr>
                                            <td>{{item.nom}}</td>
                                            <td>{{item.prenom}}</td>
                                            <td>{{item.mail}}</td>
                                            {% set label = ['label-primary','label-success','label-default ' ] %}
                                            <td> <span class="label {{label[item.profil -1 ]}}">{{data.g_profil[item.profil]}}</span> </td>
                                            <td>
                                                <a class="btn btn-primary btn-xs" href="{{path("home")}}user/{{item.id}}"><i class="fa fa-pencil"></i> Modifier</a>
                                                <a class="btn btn-danger btn-xs" href="" data-href="{{path("home")}}userdelete/{{item.id}}" data-toggle="modal" data-target="#confirm-delete"><i class="fa fa-trash-o"></i> Supprimer</a><br>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <!-- end project list -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}